# API Configuration
VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=ExamSystem
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de Provas Online

# Environment
VITE_NODE_ENV=development

# Features Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_ANALYTICS=false

# Third-party Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# QR Code Settings
VITE_QR_SCANNER_FPS=10
VITE_QR_SCANNER_QRBOX_SIZE=250

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Settings
VITE_CACHE_DURATION=300000
VITE_QUERY_STALE_TIME=300000

# UI Settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ANIMATION_DURATION=200

# Development Settings (only for development)
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API=false
VITE_BYPASS_AUTH=false