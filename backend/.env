# backend/.env - Configure este arquivo com seus dados

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_NAME=exam_system
DB_USER=exam_user
DB_PASSWORD=root
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration - MUDE ESTA CHAVE EM PRODUÇÃO!
JWT_SECRET=exam_system_super_secret_key_2024_muito_segura_mude_em_producao
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=exam_system_refresh_secret_2024
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (opcional para desenvolvimento)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=src/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Security (opcional)
BCRYPT_ROUNDS=12
SESSION_SECRET=sua_session_secret_aqui

# Development Features
ENABLE_CORS=true
ENABLE_LOGGING=true
ENABLE_RATE_LIMITING=false