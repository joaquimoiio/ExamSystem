    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "sequelize": "^6.32.1",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "qrcode": "^1.5.3",
    "pdfkit": "^0.13.0",
    "winston": "^3.9.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
